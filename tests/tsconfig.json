{
	"compileOnSave": true,
	"compilerOptions": {
		"target": "ESNext",
		"rootDir": "..",
		"outDir": "compiled",
		"module": "NodeNext",
		"moduleResolution": "node",
		"baseUrl": ".",
		"esModuleInterop": true,
		"noImplicitAny": true,
		"removeComments": true,
		"preserveConstEnums": true,
		"declaration": false,
		"sourceMap": false,
		"experimentalDecorators": true,
		"emitDecoratorMetadata": true,
		"listFiles": true,
		"traceResolution": true,
		"paths": {
			"@lang/*": ["../lib/mjs/*"],
			"@lang/serialization/*": ["../lib/mjs/serialization/*"],
			"@/*": ["../src/*.ts"],
			"node_modules/*":["../node_modules/*"],
			
		}
	},
	"include": ["../**/*"],
}
